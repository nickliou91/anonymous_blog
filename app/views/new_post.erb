<div class="container">

 <form action= "/posts/new_post" method="POST" class="basic-grey">
    <h1>Post something
        <!-- <span>Please fill all the texts in the fields.</span>-->
    </h1>
    <label>
        <span>Your Name:</span>
        <input id="author" type="text" name="author" placeholder="Your Full Name" />
    </label>

   <!--  <label>
        <span>Your Email :</span>
        <input id="email" type="email" name="email" placeholder="Valid Email Address" />
    </label> -->
     <label>
        <span>Title:</span>
        <input id="title" type="text" name="title" placeholder="Your subject" />
    </label>
    <label>
        <span>Content :</span>
        <textarea id="message" name="content" placeholder="Your Message to Us"></textarea>
    </label>

     <label>
        <span>&nbsp;</span>

        <input type="Submit" class="button" value="Post" />
    </label>
</form>
</div>

<% if !@error_msg.nil? %>
<% @error_msg.each do |v| %>
  <%=  v %> <br>
  <% end %>
<% end %>


